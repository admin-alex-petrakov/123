/**
 * @file
 * Install, update and uninstall functions for the flatcomments module.
 */

/**
 * Implementation of hook_uninstall().
 */
function flatcomments_uninstall() {
  // Delete settings from varible table.
  db_delete('variable')
    ->condition('name', 'flatcomments_%', 'LIKE')
    ->execute();
}
